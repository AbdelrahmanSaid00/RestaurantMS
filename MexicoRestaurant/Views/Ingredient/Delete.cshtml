@model Ingredient
@{
    ViewBag.Title = $"Delete {Model.Name} Ingredient";
}

<div class="container mt-4">
    <h2 class="fw-bold text-danger mb-4">@ViewBag.Title</h2>

    <div class="alert alert-warning shadow-sm">
        <h5>Are you sure you want to delete this item?</h5>
        <p class="mb-1"><strong>Ingredient:</strong> @Model.Name</p>
    </div>

    <form asp-action="Delete" method="post" class="d-flex align-items-center">
        <input type="hidden" asp-for="IngredientId" />
        <button type="submit" class="btn btn-danger me-3">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div>
