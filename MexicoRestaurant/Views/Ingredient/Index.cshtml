@model IEnumerable<Ingredient>

@{
    ViewBag.Title = "List of Restaurant Ingredients";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Ingredients</h2>
        @if (isAdmin) 
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Ingredient
            </a>
        }
    </div>

    <table class="table table-striped table-hover shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Ingredient ingredient in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => ingredient.Name)</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@ingredient.IngredientId" class="btn btn-sm btn-info me-1">
                            <i class="bi bi-eye"></i> Details
                        </a>

                        @if (isAdmin)  
                        {
                            <a asp-action="Edit" asp-route-id="@ingredient.IngredientId" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@ingredient.IngredientId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
